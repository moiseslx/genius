<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.game.DidacticActivity">

        <Button
            android:id="@+id/btnX5"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginTop="32dp"
            android:text="5×"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnX2" />

        <Button
            android:id="@+id/btnX6"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:text="6×"
            app:layout_constraintBottom_toBottomOf="@+id/btnX5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toEndOf="@+id/btnX5"
            app:layout_constraintTop_toTopOf="@+id/btnX5"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnX3"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:text="3×"
            app:layout_constraintBottom_toBottomOf="@+id/btnX2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toEndOf="@+id/btnX2"
            app:layout_constraintTop_toTopOf="@+id/btnX2"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnX1"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:text="1×"
            app:layout_constraintBottom_toBottomOf="@+id/btnX2"
            app:layout_constraintEnd_toStartOf="@+id/btnX2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnX2"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnX2"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginTop="32dp"
            android:text="2×"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/btnX7"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:text="7×"
            app:layout_constraintBottom_toBottomOf="@+id/btnX8"
            app:layout_constraintEnd_toStartOf="@+id/btnX8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnX8"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnX8"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginTop="24dp"
            android:text="8×"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnX5" />

        <Button
            android:id="@+id/btnX9"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:text="9×"
            app:layout_constraintBottom_toBottomOf="@+id/btnX8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toEndOf="@+id/btnX8"
            app:layout_constraintTop_toTopOf="@+id/btnX8"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnX10"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:text="10×"
            app:layout_constraintBottom_toBottomOf="@+id/btnCF"
            app:layout_constraintEnd_toStartOf="@+id/btnCF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnCF"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnCF"
            style="@style/Button"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#3F7397"
            android:text="Como funciona?"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnX8" />

        <Button
            android:id="@+id/btnPC"
            style="@style/Button"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:backgroundTint="#3F7397"
            android:text="+ conteúdos"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnCF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toEndOf="@+id/btnCF"
            app:layout_constraintTop_toTopOf="@+id/btnCF"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnX4"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:text="4×"
            app:layout_constraintBottom_toBottomOf="@+id/btnX5"
            app:layout_constraintEnd_toStartOf="@+id/btnX5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnX5"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="PARA APRENDIZAGEM"
            android:fontFamily="@font/lato_regular"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnReturnT"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="136dp"
            android:layout_height="156dp"
            android:layout_marginStart="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCF"
            app:layout_constraintVertical_bias="0.714"
            app:srcCompat="@drawable/img0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Hora de estudar!"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="@+id/imageView9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>