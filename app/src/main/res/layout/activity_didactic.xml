            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnX2"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnX2"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginTop="32dp"
            android:text="@string/__2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/btnX7"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:text="@string/__7"
            app:layout_constraintBottom_toBottomOf="@+id/btnX8"
            app:layout_constraintEnd_toStartOf="@+id/btnX8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnX8"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnX8"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginTop="24dp"
            android:text="@string/__8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
