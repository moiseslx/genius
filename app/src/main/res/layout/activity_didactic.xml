            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnCF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toEndOf="@+id/btnCF"
            app:layout_constraintTop_toTopOf="@+id/btnCF"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/btnX4"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:text="@string/__4"
            app:layout_constraintBottom_toBottomOf="@+id/btnX5"
            app:layout_constraintEnd_toStartOf="@+id/btnX5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnX5"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            style="@style/Button"
            android:backgroundTint="#3F7397"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/para_aprendizagem"
            android:fontFamily="@font/lato_regular"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnReturnT"
